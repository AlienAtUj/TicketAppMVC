@{
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
    bool isAuthPage = (currentController == "Account" &&
                       (currentAction == "Login" || currentAction == "Signup"));
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TicketAppMVC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


  
    <link href="~/Content/app-theme.css" rel="stylesheet" />
</head>
<body class="bg-body">

    @if (!isAuthPage)
    {
        <header class="app-header border-bottom">
            <nav class="navbar navbar-expand-lg container">
                <a class="navbar-brand fw-bold text-primary" href="@Url.Action("Index","Home")">ticket<span class="text-accent">hub</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("StudentDashboard","Dashboard")">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyTickets","Dashboard")">My Tickets</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("CartDashboard","Dashboard")">Cart</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Profile","Dashboard")">Profile</a></li>
                        <li class="nav-item"><a class="btn btn-outline-secondary ms-lg-2" href="@Url.Action("Logout","Account")">Logout</a></li>
                    </ul>

                </div>
            </nav>

            <!-- Hero search band -->
            <div class="hero-band">
                <div class="container">
                    <form method="get" action="@Url.Action("StudentDashboard","Dashboard")" class="row g-2 align-items-center">
                        <div class="col-12 col-md-5">
                            <input name="q" class="form-control form-control-lg" placeholder="Search events, artists, venues…" />
                        </div>
                        <div class="col-6 col-md-3">
                            <select name="where" class="form-control form-control-lg">
                                <option value="">Select location</option>
                                <option value="UJ APK Campus">UJ APK Campus</option>
                                <option value="UJ APB Campus">UJ APB Campus</option>
                                <option value="UJ DFC Campus">UJ DFC Campus</option>
                                <option value="UJ SW Campus">UJ SW Campus</option>
                            </select>
                        </div>
                        <div class="col-6 col-md-2">
                            <input type="date" name="when" class="form-control form-control-lg" />
                        </div>
                        <div class="col-12 col-md-2 d-grid">
                            <button class="btn btn-accent btn-lg">Find tickets</button>
                        </div>
                    </form>
                </div>
            </div>
        </header>
    }

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-4">
        <div class="container d-flex flex-wrap gap-3 justify-content-between small text-muted">
            <div>© @DateTime.Now.Year TicketHub</div>
            <div class="d-flex gap-3">
                <a href="#">About</a>
                <a href="#">Help</a>
                <a href="#">Terms</a>
                <a href="#">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
