@{
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
    bool isAuthPage = (currentController == "Account" &&
                       (currentAction == "Login" || currentAction == "Signup"));
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TicketAppMVC - Organizer Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- App theme -->
    <link href="~/Content/app-theme.css" rel="stylesheet" />
</head>
<body class="bg-light">

    @if (!isAuthPage)
    {
        <header class="app-header border-bottom bg-white shadow-sm">
            <nav class="navbar navbar-expand-lg container">
                <a class="navbar-brand fw-bold text-primary" href="@Url.Action("OrganizerDashboard","Dashboard")">ticket<span class="text-accent">hub</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#orgNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="orgNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("OrganizerDashboard","Dashboard")">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Reports","ManageEvents")">Reports</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("CreateEvent","ManageEvents")">Create Event</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Profile","Dashboard")">Profile</a></li>
                        <li class="nav-item"><a class="btn btn-outline-secondary ms-lg-2" href="@Url.Action("Logout","Account")">Logout</a></li>
                    </ul>
                </div>
            </nav>

            <!-- Optional Hero / Stats band for organizers -->
            <div class="bg-primary text-white py-3">
                <div class="container d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Welcome, @Session["User"]</h4>
                    <div>
                        <span class="me-3"><i class="fas fa-calendar-alt"></i> Upcoming Events: @ViewBag.UpcomingEventsCount</span>
                        <span><i class="fas fa-ticket-alt"></i> Tickets Sold: @ViewBag.TotalTicketsSold</span>
                    </div>
                </div>
            </div>
        </header>
    }

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-4 bg-white">
        <div class="container d-flex flex-wrap gap-3 justify-content-between small text-muted">
            <div>© @DateTime.Now.Year TicketHub</div>
            <div class="d-flex gap-3">
                <a href="#">About</a>
                <a href="#">Help</a>
                <a href="#">Terms</a>
                <a href="#">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
