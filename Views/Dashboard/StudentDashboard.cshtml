@model List<TicketAppMVC.Models.Event>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Browse Events</h2>
    <div class="d-flex gap-2">
        <a class="badge bg-light text-dark" href="@Url.Action("StudentDashboard","Dashboard", new { sort="date" })">Date</a>
        <a class="badge bg-light text-dark" href="@Url.Action("StudentDashboard","Dashboard", new { sort="price" })">Price</a>
        <a class="badge bg-light text-dark" href="@Url.Action("StudentDashboard","Dashboard", new { sort="popular" })">Popular</a>
    </div>
</div>

<div class="row g-4">
    @foreach (var ev in Model)
    {
        var left = ev.AvailableTickets;
        var sold = ev.TotalTickets - ev.AvailableTickets;

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card shadow-sm h-100 border-0 rounded-3">
                <a href="@Url.Action("EventDetails","Dashboard", new { id = ev.Id })">
                    <img src="@ev.EventImageUrl" alt="@ev.Title"
                         class="card-img-top" style="height:200px;object-fit:cover;" />
                </a>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="fw-semibold">
                            <a href="@Url.Action("EventDetails","Dashboard", new { id = ev.Id })" class="text-decoration-none text-dark">
                                @ev.Title
                            </a>
                        </h5>
                        <span class="badge bg-primary">@ev.EventDate.ToString("dd MMM")</span>
                    </div>

                    <p class="text-muted small mb-2">@ev.Location</p>

                    <div class="d-flex align-items-center gap-2 mb-3">
                        @if (ev.Organizer != null)
                        {
                            <img src="@ev.Organizer.ProfileImageUrl" alt="@ev.Organizer.Username"
                                 style="width:36px;height:36px;border-radius:50%;object-fit:cover;">
                            <div class="small">
                                <div class="fw-semibold">@ev.Organizer.Username</div>
                                <div class="text-muted">Organizer</div>
                            </div>
                        }
                        else
                        {
                            <div class="small text-muted fst-italic">Unknown Organizer</div>
                        }
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="text-success fw-bold">@sold</span>
                            <span class="text-muted small"> sold</span>
                        </div>
                        <div>
                            <span class="text-danger fw-bold">@left</span>
                            <span class="text-muted small"> left</span>
                        </div>
                        <p class="card-text"><strong>Price:</strong> @String.Format("R {0:N2}", ev.Price)</p>
                    </div>

                    <div class="d-flex align-items-center gap-2 mb-3">
                        <button class="btn btn-outline-secondary btn-sm" onclick="stepQty(@ev.Id,-1)">−</button>
                        <input id="qty-@ev.Id" type="number" min="1" max="@left" value="1"
                               class="form-control form-control-sm text-center" style="width:60px;">
                        <button class="btn btn-outline-secondary btn-sm" onclick="stepQty(@ev.Id,1)">+</button>
                    </div>

                    <div class="mt-auto d-flex gap-2">
                        <form method="post" action="@Url.Action("AddToCart","Dashboard")" class="w-100">
                            <input type="hidden" name="eventId" value="@ev.Id" />
                            <input type="hidden" name="quantity" id="post-qty-@ev.Id" value="1" />
                            <button class="btn btn-primary w-100">Add Tickets</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts{
    <script>
        function stepQty(id, delta) {
            var el = document.getElementById('qty-' + id);
            if (!el) return;
            var max = parseInt(el.getAttribute('max') || '99', 10);
            var v = Math.max(1, Math.min(max, (parseInt(el.value || '1', 10) + delta)));
            el.value = v;
            var post = document.getElementById('post-qty-' + id);
            if (post) post.value = v;
        }
    </script>
}
